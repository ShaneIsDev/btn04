<div class="contact-from-section mt-150 mb-150">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <h2>Đăng kí</h2>
        <div id="form_status"></div>
        <div class="contact-form">
          <form
            type="POST"
            id="fruitkha-contact"
            onSubmit="return valid_datas( this );"
          >
            <p>
              <input
                type="text"
                placeholder="Tên đăng nhập"
                name="name"
                id="name"
              />
              <input
                type="password"
                placeholder="Password"
                name="password"
                id="password"
              />
            </p>
            <p>
              <input type="email" placeholder="Email" name="email" id="email" />
              <input
                type="tel"
                placeholder="Số điện thoại"
                name="tel"
                id="tel"
              />
            </p>
            <input type="hidden" name="token" value="reg" />
            <p><input type="submit" value="Đăng kí" /></p>
          </form>
        </div>
      </div>
      <div class="col-lg-6 mb-5 mb-lg-0">
        <h2>Đăng nhập</h2>
        <div id="form_status"></div>
        <div class="contact-form">
          <form
            type="POST"
            id="fruitkha-contact"
            onSubmit="return valid_datas( this );"
          >
            <p>
              <input
                type="text"
                placeholder="Tên đăng nhập"
                name="name"
                id="name"
              />
              <input
                type="password"
                placeholder="Password"
                name="password"
                id="password"
              />
            </p>
            <input type="hidden" name="token" value="log" />
            <p><input type="submit" value="Đăng nhập" /></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end contact form -->